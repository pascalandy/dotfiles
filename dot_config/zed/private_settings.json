{
  "completions": {
    "words_min_length": 5
  },
  "show_completions_on_input": false,
  "theme": "Catppuccin Macchiato",
  "agent_servers": {
    "your_agent": {
      "type": "custom",
      "command": "path_to_executable",
      "args": [],
      "env": {}
    },
    "claude": {
      "default_model": "opus"
    }
  },
  "ui_font_size": 16,
  "buffer_font_size": 16
}
